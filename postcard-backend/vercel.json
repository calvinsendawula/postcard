{
  "version": 2,
  "builds": [
    {
      "src": "./api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/query", "dest": "/api/index.js" },
    { "src": "/", "methods": ["POST"], "dest": "/api/index.js" },
    { "src": "/", "methods": ["GET"], "dest": "/api/index.js" },
    { "src": "/api/(.*)", "dest": "/api/index.js" }
  ]
} 